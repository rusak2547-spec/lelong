// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Model untuk Produk Emas
model Product {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(255)
  description String   @db.Text // Deskripsi kondisi barang
  price       Float    // Harga Buka (Open Bid)
  weight      Float    // Berat dalam gram
  imageUrl    String   @db.VarChar(500) // Path gambar yang diupload
  category    String   @default("GOLD") @db.VarChar(50) // "GOLD" or "GADGET"
  status      String   @default("AVAILABLE") @db.VarChar(50) // Value: "AVAILABLE" or "SOLD"
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Model untuk Login Admin
model Admin {
  id       String @id @default(uuid()) @db.VarChar(36)
  username String @unique @db.VarChar(100)
  password String @db.VarChar(255)
}

// Konfigurasi Global Sistem
model GlobalSettings {
  id          Int    @id @default(autoincrement())
  telegramUrl String @default("https://t.me/") @db.VarChar(500)
}
